<?xml version="1.0" encoding="UTF-8"?>
<config>
  <tabs>
    <scriptkid translate="label" module="actionlogin">
        <label>scriptkid</label>
        <sort_order>100</sort_order>
    </scriptkid>
  </tabs>
  <sections>
    <actionlogin translate="label">
        <label>Actionlogin Optionen</label>
        <tab>scriptkid</tab>
        <sort_order>1</sort_order>
        <show_in_default>1</show_in_default>
  			<show_in_website>1</show_in_website>
  			<show_in_store>1</show_in_store>
        <groups>
          <customerdata translate="label">
            <label>Optionen</label>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
      			<show_in_website>1</show_in_website>
      			<show_in_store>1</show_in_store>
            <fields>
              <customer_email translate="label">
                <label>E-Mail</label>
                <comment>E-Mail-Adresse des Kundenkontos</comment>
                <frontend_type>text</frontend_type>
                <sort_order>10</sort_order>
                <show_in_default>1</show_in_default>
          			<show_in_website>1</show_in_website>
          			<show_in_store>1</show_in_store>
              </customer_email>
              <customer_password translate="label">
                <label>Passwort</label>
                <comment>Kundenpasswort</comment>
                <frontend_type>password</frontend_type>
                <sort_order>20</sort_order>
                <show_in_default>1</show_in_default>
          			<show_in_website>1</show_in_website>
          			<show_in_store>1</show_in_store>
              </customer_password>
              <customer_group translate="label">
                <label>Kundengruppe</label>
                <comment>Kundengruppe für deaktivierten Warenkorb auswählen</comment>
                <frontend_type>multiselect</frontend_type>
                <source_model>adminhtml/system_config_source_customer_group</source_model>
                <sort_order>30</sort_order>
                <show_in_default>1</show_in_default>
          			<show_in_website>1</show_in_website>
          			<show_in_store>1</show_in_store>
              </customer_group>
            </fields>
          </customerdata>
          <safety translate="label">
            <label>Sicherheit</label>
            <frontend_type>text</frontend_type>
            <sort_order>2</sort_order>
            <show_in_default>1</show_in_default>
      			<show_in_website>1</show_in_website>
      			<show_in_store>1</show_in_store>
            <fields>
              <hash translate="label">
                <label>Hashwert</label>
                <comment>Sicherheitshash für Aufruf im Frontend</comment>
                <frontend_type>password</frontend_type>
                <sort_order>10</sort_order>
                <show_in_default>1</show_in_default>
          			<show_in_website>1</show_in_website>
          			<show_in_store>1</show_in_store>
              </hash>
            </fields>
          </safety>
        </groups>
    </actionlogin>
  </sections>
</config>
